# Flask Configuration
# Set to 'production' in production environments for security
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Database Configuration
DATABASE_URL=sqlite:///inventory_hub.db
# For PostgreSQL: postgresql://username:password@localhost/inventory_hub
# For MySQL: mysql://username:password@localhost/inventory_hub

# CORS Configuration
CORS_ORIGINS=*
# For production: http://localhost:3000,https://yourdomain.com

# Pagination
ITEMS_PER_PAGE=20
MAX_ITEMS_PER_PAGE=100

# Scraping Configuration
MAX_SCRAPING_PAGES=5

# Scraper Settings (from parent config)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2
USE_HEADLESS=True
PAGE_LOAD_TIMEOUT=30
OUTPUT_DIR=scraped_data
OUTPUT_FORMAT=json
LOG_LEVEL=INFO
