# Example .env file for Inventory Hub
# Copy this to .env and customize as needed

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///inventory_hub.db
# For PostgreSQL: postgresql://user:password@localhost/inventory_hub

# Celery Configuration (Optional - for background task processing)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# User agent string for web requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Request settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2

# Selenium settings
USE_HEADLESS=True
PAGE_LOAD_TIMEOUT=30

# Output settings
OUTPUT_DIR=scraped_data
OUTPUT_FORMAT=json
SCRAPER_OUTPUT_DIR=scraped_data

# Logging
LOG_LEVEL=INFO

# Application Settings
ITEMS_PER_PAGE=20
RATELIMIT_ENABLED=False
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1
